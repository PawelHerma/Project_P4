<Application x:Class="Project_P4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project_P4" xmlns:views="clr-namespace:Project_P4.Views"
             xmlns:viewmodels="clr-namespace:Project_P4.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeDataControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ExpenceViewModel}">
            <views:ExpenceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ExpGroupViewModel}">
            <views:ExpGroupView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:IncomeViewModel}">
            <views:IncomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MemberViewModel}">
            <views:MemberView/>
        </DataTemplate>

    </Application.Resources>
</Application>
